{
  "name": "shyft",
  "version": "0.5.2",
  "description": "Model driven GraphQL API framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint src/*",
    "lint-fix": "eslint src/* --fix",
    "lint-staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "tsc",
    "build-watch": "tsc -w",
    "release": "np --no-publish"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/eslint/bin/eslint.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "shyft",
    "graphql",
    "api",
    "model",
    "generator",
    "database",
    "workflow",
    "permissions",
    "validation",
    "workflows",
    "finite-state-machine",
    "acl",
    "migrations",
    "shyft",
    "graphql-apis",
    "mutations"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@types/jest": "24.0.23",
    "@types/lodash": "4.14.149",
    "@typescript-eslint/eslint-plugin": "2.9.0",
    "@typescript-eslint/parser": "2.9.0",
    "babel-jest": "24.9.0",
    "casual": "1.6.2",
    "codecov": "3.6.1",
    "cross-env": "6.0.3",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "prettier-eslint": "9.0.1",
    "prettier-eslint-cli": "5.0.0",
    "rimraf": "3.0.2",
    "ts-jest": "24.2.0",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "date-fns": "^2.1.0",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "graphql-type-json": "^0.3.0",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "pluralize": "^8.0.0"
  }
}
