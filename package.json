{
  "name": "shift-postgres-connector",
  "version": "0.1.0",
  "description": "Postgres connector for shift",
  "main": "dist/",
  "scripts": {
    "test": "jest --testPathIgnorePatterns test/",
    "test:watch": "jest --testPathIgnorePatterns test/ --watch",
    "test:integration": "jest --runInBand",
    "test:integration:watch": "jest --runInBand --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "coverage": "NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "babel": "babel --presets es2015,stage-0 --ignore node_modules,coverage",
    "build": "mkdir dist; npm run test && NODE_ENV=build babel lib -d dist",
    "build:watch": "mkdir dist; NODE_ENV=build babel lib -w -d dist"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "./node_modules/eslint/bin/eslint.js"
  },
  "pre-commit": "lint-staged",
  "keywords": [
    "shift",
    "api",
    "postgres",
    "model",
    "generator"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 2.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "casual": "^1.5.19",
    "codecov": "^2.1.0",
    "eslint": "^3.12.1",
    "eslint-plugin-mocha": "^4.7.0",
    "jest": "^22.2.2",
    "lint-staged": "^3.2.2",
    "pre-commit": "^1.2.1"
  },
  "dependencies": {
    "dataloader": "^1.3.0",
    "json-shaper": "^1.1.0",
    "lodash": "^4.17.4",
    "pg": "6.4.2",
    "toposort": "^1.0.3"
  },
  "peerDependencies": {
    "sequelize": "^4.15.2"
  }
}
