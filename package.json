{
  "name": "shift",
  "version": "1.0.0",
  "description": "Model driven database and API generator",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register -R spec --check-leaks packages/*/lib/*.spec.js packages/*/lib/**/*.spec.js || exit 1",
    "test:watch": "nodemon --config ./nodemon.json --delay 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "cov": "NODE_ENV=test nyc npm run test",
    "coverage": "NODE_ENV=test nyc mocha -R spec --check-leaks packages/*/lib/*.spec.js packages/*/lib/**/*.spec.js",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "babel": "babel --presets es2015,stage-0 --ignore node_modules,coverage"
  },
  "lint-staged": {
    "*.js": "./node_modules/eslint/bin/eslint.js"
  },
  "pre-commit": "lint-staged",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "eslint": "3.19.0",
    "eslint-plugin-mocha": "^4.10.1",
    "lerna": "^2.0.0-rc.4",
    "lint-staged": "^3.2.2",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "pre-commit": "^1.2.1"
  },
  "dependencies": {
    "casual": "^1.5.14"
  }
}
