{
  "name": "shyft-postgres-connector",
  "version": "0.1.0",
  "description": "Postgres connector for shyft",
  "main": "lib/",
  "scripts": {
    "test": "jest --testPathIgnorePatterns test/",
    "test-watch": "jest --testPathIgnorePatterns test/ --watch",
    "test-integration": "jest --runInBand",
    "test-integration-watch": "jest --runInBand --watch",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "coverage": "NODE_ENV=test jest --runInBand --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "babel": "babel --presets es2015,stage-0 --ignore node_modules,coverage",
    "build": "mkdir -p lib; npm run test && NODE_ENV=build babel src -d lib",
    "build-watch": "mkdir -p lib; NODE_ENV=build babel src -w -d lib",
    "prepublish": "yarn run build"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "./node_modules/eslint/bin/eslint.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": "lint-staged",
  "keywords": [
    "shyft",
    "api",
    "postgres",
    "model",
    "generator"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 2.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "casual": "^1.5.19",
    "codecov": "^3.0.4",
    "eslint": "5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lerna": "^3.0.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "sqlite3": "^4.0.2"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "prettier-eslint-cli": "^4.7.1",
    "toposort": "^2.0.2"
  },
  "peerDependencies": {
    "pg": "^7.4.1",
    "shyft": "^1.0.0",
    "typeorm": "^0.2.7"
  }
}
