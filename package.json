{
  "name": "shyft",
  "version": "0.8.0",
  "description": "Model driven GraphQL API framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
    "lint-fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint-staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "tsc",
    "build-watch": "tsc -w",
    "release": "np --no-publish"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/eslint/bin/eslint.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "shyft",
    "graphql",
    "api",
    "model",
    "generator",
    "database",
    "workflow",
    "permissions",
    "validation",
    "workflows",
    "finite-state-machine",
    "acl",
    "migrations",
    "shyft",
    "graphql-apis",
    "mutations"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriskalmar/shyft"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@types/jest": "26.0.14",
    "@types/lodash": "4.14.161",
    "@types/node": "14.11.5",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-jest": "26.5.2",
    "codecov": "3.8.0",
    "cross-env": "7.0.2",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "jest": "26.5.2",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "prettier-eslint": "11.0.0",
    "prettier-eslint-cli": "5.0.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.1",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "casual": "^1.6.2",
    "date-fns": "^2.1.0",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-type-json": "^0.3.0",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "pluralize": "^8.0.0"
  }
}
