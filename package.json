{
  "name": "shyft",
  "version": "0.3.1",
  "description": "Model driven GraphQL API framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint src/*",
    "lint-fix": "eslint src/* --fix",
    "lint-staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "tsc",
    "build-watch": "tsc -w",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build || true"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/eslint/bin/eslint.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "shyft",
    "graphql",
    "api",
    "model",
    "generator",
    "database",
    "workflow",
    "permissions"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@types/graphql": "14.2.0",
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.123",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "@typescript-eslint/parser": "1.6.0",
    "babel-jest": "24.7.1",
    "casual": "1.6.0",
    "codecov": "3.3.0",
    "cross-env": "5.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "graphql": "14.2.1",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "prettier-eslint": "8.8.2",
    "prettier-eslint-cli": "4.7.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.1",
    "typescript": "3.4.2"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "graphql-relay": "^0.6.0",
    "graphql-type-json": "^0.2.1",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "pluralize": "^7.0.0"
  },
  "peerDependencies": {
    "graphql": "^14.1.x"
  }
}
