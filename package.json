{
  "name": "shyft",
  "version": "0.2.0",
  "description": "Model driven GraphQL API framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint src/*",
    "lint-fix": "eslint src/* --fix",
    "lint-staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "tsc",
    "build-watch": "tsc -w",
    "prepublish": "yarn run clean && yarn run lint && yarn run test && yarn run build"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/eslint/bin/eslint.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "shyft",
    "api",
    "model",
    "generator"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "casual": "^1.5.19",
    "codecov": "^3.0.4",
    "cross-env": "^5.2.0",
    "eslint": "5.3.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.1.4",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "graphql-relay": "^0.5.5",
    "graphql-type-json": "^0.2.1",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "pluralize": "^7.0.0"
  },
  "peerDependencies": {
    "graphql": "^14.1.x"
  }
}
