{
  "name": "shyft-storage-connector",
  "version": "0.1.5",
  "description": "Storage connector for Shyft",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest --testPathIgnorePatterns test/",
    "test-watch": "jest --testPathIgnorePatterns test/ --watch",
    "test-integration": "TZ=UTC jest --runInBand",
    "test-integration-watch": "TZ=UTC jest --runInBand --watch",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "coverage": "NODE_ENV=test jest --runInBand --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "mkdir -p lib; npm run test && NODE_ENV=build babel src -d lib --verbose",
    "build-watch": "mkdir -p lib; NODE_ENV=build babel src -w -d lib --verbose",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build",
    "release": "np --no-publish"
  },
  "files": [
    "lib",
    "storageScripts"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "./node_modules/eslint/bin/eslint.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": "lint-staged",
  "keywords": [
    "shyft",
    "api",
    "postgres",
    "model",
    "generator",
    "storage",
    "postgresql",
    "dataloader",
    "shyft",
    "migrations",
    "mutations",
    "model",
    "finite-state-machine",
    "permissions",
    "database",
    "acl",
    "typeorm"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 2.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-eslint": "^10.0.3",
    "casual": "^1.5.19",
    "codecov": "^3.0.4",
    "eslint": "5.3.0",
    "eslint-config-prettier": "^6.2.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^24.5.0",
    "lint-staged": "^7.2.0",
    "pg": "^7.12.1",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "shyft": "^0.3.3",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.18"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "prettier-eslint-cli": "^4.7.1",
    "toposort": "^2.0.2"
  }
}
