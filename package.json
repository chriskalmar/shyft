{
  "name": "shyft",
  "version": "1.1.6",
  "description": "Model driven GraphQL API framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest --testPathIgnorePatterns test/",
    "test-watch": "jest --testPathIgnorePatterns test/ --watch",
    "test-integration": "TZ=UTC jest --runInBand",
    "test-integration-watch": "TZ=UTC jest --runInBand --watch",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
    "lint-fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint-staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test TZ=UTC jest --runInBand --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "tsc",
    "build-watch": "tsc -w",
    "release": "np --no-publish"
  },
  "files": [
    "lib",
    "storageScripts"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/eslint/bin/eslint.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "shyft",
    "graphql",
    "api",
    "model",
    "generator",
    "database",
    "workflow",
    "permissions",
    "validation",
    "workflows",
    "finite-state-machine",
    "acl",
    "migrations",
    "shyft",
    "graphql-apis",
    "mutations"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriskalmar/shyft"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "babel-jest": "26.6.3",
    "codecov": "3.8.1",
    "cross-env": "7.0.3",
    "eslint": "7.28.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "pg": "8.5.1",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "rimraf": "3.0.2",
    "sqlite3": "5.0.1",
    "ts-jest": "26.5.0",
    "typeorm": "0.2.30",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "casual": "^1.6.2",
    "dataloader": "^2.0.0",
    "date-fns": "^2.1.0",
    "graphql": "^15.5.0",
    "graphql-relay": "^0.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-type-json": "^0.3.0",
    "json-shaper": "^1.2.0",
    "lodash": "^4.17.10",
    "pluralize": "^8.0.0",
    "toposort": "^2.0.2"
  }
}
