{
  "name": "shift-engine",
  "version": "1.0.0",
  "description": "Model driven database and API generator",
  "main": "dist/",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "coverage": "NODE_ENV=test jest --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "babel": "babel --presets es2015,stage-0 --ignore node_modules,coverage",
    "build": "mkdir dist; npm run test && NODE_ENV=build babel lib -d dist",
    "build:watch": "mkdir dist; NODE_ENV=build babel lib -w -d dist"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "shift",
    "api",
    "model",
    "generator"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 2.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "eslint": "^3.12.1",
    "jest": "^22.0.4"
  }
}
