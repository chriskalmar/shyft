{
  "name": "shift-graphql",
  "version": "0.0.1",
  "description": "GraphQL extension for shift",
  "main": "dist/",
  "scripts": {
    "test": "mocha --compilers js:babel-register -R spec --check-leaks lib/*.spec.js lib/**/*.spec.js || exit 1",
    "test:watch": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "cov": "NODE_ENV=test nyc npm run test",
    "coverage": "NODE_ENV=test nyc mocha -R spec --check-leaks lib/*.spec.js lib/**/*.spec.js",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "babel": "babel --presets es2015,stage-0 --ignore node_modules,coverage",
    "build": "mkdir dist; npm run test && NODE_ENV=build babel lib -d dist",
    "build:watch": "mkdir dist; NODE_ENV=build babel lib -w -d dist"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "graphql",
    "shift",
    "model",
    "generator"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 2.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "graphql-relay": "^0.5.3",
    "graphql-type-json": "^0.1.4",
    "json-shaper": "^1.1.0",
    "lodash": "^4.17.4",
    "pluralize": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "eslint": "^3.12.1",
    "jest": "^22.0.4",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2"
  },
  "peerDependencies": {
    "graphql": "^0.10.0 || ^0.11.0",
    "shift-engine": "^1.0.0"
  }
}
