{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "declaration": true,
    "target": "es5",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js",
    "**/*.spec.ts"
  ]
}
